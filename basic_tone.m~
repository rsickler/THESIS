function basic_tone

% Perform basic initialization of the sound driver:
InitializePsychSound(1);
freq = 44100;
nrchannels = 1;
snddata = MakeBeep(378, .25, freq);

pahandle = PsychPortAudio('Open', [], [], 0, freq, nrchannels);
PsychPortAudio('FillBuffer', pahandle, snddata);

% start it immediately (0) and wait for the playback to start
tic; 
t1 = PsychPortAudio('Start', pahandle, 1, 0, 0);
% t1 = PsychPortAudio('Start', pahandle, [1], [0], [1], [0]);

% Close the audio device:
PsychPortAudio('Close', pahandle);

% Done.
toc; 
end